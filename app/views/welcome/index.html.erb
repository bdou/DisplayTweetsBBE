<div class="container">
	<% if @error %>
		<div class="alert alert-danger" role="alert">
			<%= @error %>
		</div>
	<% end %>

	<h1>Lookup Twitter User</h1>
	<%= form_with do |form| %>
		<%= form.text_field(:name, {:class => 'form-control'}) %><br>
		<%= form.submit("Search", {:class => 'btn btn-primary float-right'}) %>
	<% end %><br><br>

	<% if @tweets %>
		<table class="table table-striped">
			<% @tweets.each do |tweet| %>
				<tr>
					<td><strong><%= tweet.created_at.strftime("%B %d, %Y %I:%M%p") %></strong></td>
					<td><%= tweet.text %></td>
				</tr>
			<% end %>
		</table>
	<% end %>
</div>